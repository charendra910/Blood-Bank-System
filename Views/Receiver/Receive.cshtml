@model ReceiveBloodModel

@{
    ViewData["Title"] = "Receive";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["SuccessMessage"]
    </div>
}


<div style="margin-top:10px;">
    <center>
        <h1 class="space"><b>RECEIVERS DETAILS</b></h1>
    </center>
</div>

<style>
    body {
        background-color: white;
    }
    .spc {
        letter-spacing: 0.20rem;
    }
    .space{
        letter-spacing:0.20rem;
    }
    .form-control {
        background-color: #f0f0f0;
    }
</style>

<form method="post" class="row g-8">
    <div class="row justify-content-center">
        <div class="col-md-9 mb-3">
            <label class="col-form-label" asp-for="FullName">Full Name</label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="col-md-9 mb-3">
            <label class="col-form-label" asp-for="Age">Age</label>
            <input asp-for="Age" type="number" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <div class="col-md-9 mb-3">
            <label class="col-form-label" asp-for="Gender">Gender</label>
            <select asp-for="Gender" class="form-control">
                <option value="">Select Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="col-md-9 mb-3">
            <label class="col-form-label" asp-for="BloodType">Blood Type</label>
            <select asp-for="BloodType" class="form-control">
                <option value="">Select Blood Type</option>
                <option value="A+">A+</option>
                <option value="A-">A-</option>
                <option value="B+">B+</option>
                <option value="B-">B-</option>
                <option value="AB+">AB+</option>
                <option value="AB-">AB-</option>
                <option value="O+">O+</option>
                <option value="O-">O-</option>
            </select>
            <span asp-validation-for="BloodType" class="text-danger"></span>
        </div>

        <div class="col-md-9 mb-3">
            <label class="col-form-label" asp-for="ContactNumber">Contact Number</label>
            <input asp-for="ContactNumber" class="form-control" />
            <span asp-validation-for="ContactNumber" class="text-danger"></span>
        </div>

        <div class="col-md-9 mb-3">
            <label class="col-form-label" asp-for="Email">Email</label>
            <input asp-for="Email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-9 mb-3">
            <label class="col-form-label" asp-for="Address">Address</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="col-md-9 mb-3">
            <label class="col-form-label" asp-for="DateOfRequirement">Date of Requirement</label>
            <input asp-for="DateOfRequirement" type="date" class="form-control" />
            <span asp-validation-for="DateOfRequirement" class="text-danger"></span>
        </div>

        <div class="col-md-9 mb-3">
            <label class="col-form-label" asp-for="MedicalHistory">Medical History / Reason for Requirement</label>
            <textarea asp-for="MedicalHistory" class="form-control"></textarea>
            <span asp-validation-for="MedicalHistory" class="text-danger"></span>
        </div>

        <!-- Centered Button -->
        <div class="col-md-9 d-flex justify-content-center">
            <button class="btn btn-primary w-50 spc mt-3" type="submit">ADD RECEIVER DETAILS</button>
        </div>
    </div>
</form>
