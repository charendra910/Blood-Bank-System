<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: antiquewhite; /* Choose your desired background color */
        }

        .box {
            width: calc(33.33% - 10px);
            background-color: #f0f0f0;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
        }

        .box-two {
            width: calc(50% - 10px);
            background-color: #f0f0f0;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
        }

        .bd-color {
            background-color: antiquewhite;
        }

        .approve-btn {
            padding-left: 50px;
            padding-right: 40px;
            /* Adjust as needed */
        }

        .reject-btn {
            padding-left: 50px;
            padding-right: 50px;
        }

    </style>
</head>
<body>

    <div class="container p-4">
        <div class="row p-3 justify-content-center">
            <div class="col-6">
                <h2 class="text-center">Update Task Details</h2>
            </div>
        </div>
    </div>

    <div class="container">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Receiver ID</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Blood Type</th>
                    <th>Contact Number</th>
                    <th>Address</th>
                    <th>Date of Requirement</th>
                    <th>Medical History / Reason for Requirement</th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var receiver in Model)
                {
                    <tr>
                        <td>@receiver.ReceiverID</td>
                        <td>@receiver.FullName</td>
                        <td>@receiver.Email</td>
                        <td>@receiver.Age</td>
                        <td>@receiver.Gender</td>
                        <td>@receiver.BloodType</td>
                        <td>@receiver.ContactNumber</td>
                        <td>@receiver.Address</td>
                        <td>@receiver.DateOfRequirement.ToString("yyyy-MM-dd")</td>
                        <td>@receiver.MedicalHistory</td>
                        <td role="group">
                            <div class="row mb-2">
                                <div class="col-md-12">
                                    <a href="@Url.Action("EditReceiversData", "Receiver", new { id = receiver.ReceiverID })">Edit</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
