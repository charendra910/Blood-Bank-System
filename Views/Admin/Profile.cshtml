@model IEnumerable<Blood_Bank_System.Models.UsersModel>

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/7.2.96/css/materialdesignicons.min.css" rel="stylesheet">

<style>
    .btn-circle {
        border-radius: 100%;
        width: 40px;
        height: 40px;
        padding: 5px;
        line-height: 30px;
        text-align: center;
    }

    .btn-secondary {
        color: #fff;
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .row {
        --bs-gutter-x: 20px;
        --bs-gutter-y: 0;
        display: flex;
        justify-content: center; /* Centers the card horizontally */
    }

    .card {
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%; /* Makes the card wider */
        max-width: 700px; /* Optional: restricts the maximum width */
    }

    .card-body h6 {
        margin-bottom: 10px;
    }

    .map-box iframe {
        border-radius: 5px;
    }

    .mt-4 {
        margin-top: 2rem;
    }

    .card-title {
        padding: 20px 0 15px 0;
        font-size: 25px;
        font-weight: 500;
        color: #012970;
        font-family: "Poppins", sans-serif;
        }
</style>

<body>
    <div class="page-wrapper">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-10 align-self-center">
                    <div class="d-flex align-items-center justify-content-end">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Admin</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Profile</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row">
                <!-- Profile Column -->
                <div class="card">
                    <div class="card-body">
                        <center class="mt-4">
                            <img src="~/images/5.jpg" class="rounded-circle" width="150" />
                            <h1 class="card-title mt-2">@User.FindFirst("FullName")?.Value</h1>
                            <h6 class="card-subtitle">B.Tech Computer Engineer</h6>
                        </center>
                    </div>
                    <div><hr></div>
                    <div class="card-body text-center">
                        <small class="text-muted">Email address</small>
                        <h6 class="mt-1">@User.Identity.Name</h6>
                        <small class="text-muted pt-4 db">Phone</small>
                        <h6>@Model.FirstOrDefault()?.PhoneNumber</h6>
                        <small class="text-muted pt-4 db">Address</small>
                        <h6>RK University Rajkot, Gujarat, India</h6>
                        <br />
                        <div class="map-box ">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d29542.58959755787!2d70.89795646770631!3d22.246766973157968!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3959b4a660019ee9%3A0x3d6254f36ed0e794!2sRK%20University%20Main%20Campus!5e0!3m2!1sen!2sin!4v1732298145633!5m2!1sen!2sin"
                                    width="100%" height="250" frameborder="0" allowfullscreen></iframe>
                        </div>
                        <br />
                        <small class="text-muted pt-4 db ">Social Profile</small>
                        <br />
                        <div class="mt-1">
                            <button class="btn btn-circle btn-secondary"><i class="mdi mdi-facebook"></i></button>
                            <button class="btn btn-circle btn-secondary"><i class="mdi mdi-twitter"></i></button>
                            <button class="btn btn-circle btn-secondary"><i class="mdi mdi-youtube"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
