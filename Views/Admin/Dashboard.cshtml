
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    .txt{
        font-size: 1.12rem; /* Adjust size */
        font-weight: bold;

    }
    /* Loader styles */
    #loader {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: #f8f9fa; /* Light gray background */
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
    }

    .spinner {
        border: 4px solid #f3f3f3; /* Light gray border */
        border-top: 4px solid #e74c3c; /* Red border for animation */
        border-radius: 50%;
        width: 30px;
        height: 30px;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

</style>

 <script>
    // JavaScript to hide loader and show main content
    const loaderDuration = @ViewBag.LoaderDuration; // Get duration from ViewBag

    setTimeout(() => {
        document.getElementById('loader').style.display = 'none';
        document.getElementById('main-content').style.display = 'block';
    }, loaderDuration);
</script>


    <!-- Loader -->
    <div id="loader">
        <div class="spinner"></div>
    </div>


<section class="container-fluid text-center mt-4">
    <div class="mb-4">
        <img src="https://cfch.com.sg/wp-content/uploads/2020/06/World-Blood-Donor-Day2.jpg"
             class="img-fluid mx-auto d-block"
             style="max-width: 80%; height: auto;"
             alt="Blood Donation">
    </div><br />

    <div class="d-flex justify-content-center gap-3">
        <a asp-controller="AddDonor" asp-action="AddDonors" class="txt btn btn-primary px-4 py-2">Add Donors</a>
        <a asp-controller="BloodStock" asp-action="Index" class="txt btn btn-secondary px-4 py-2">View Blood Stock</a>
        <a asp-controller="AddDonor" asp-action="ShowDonors" class="txt btn btn-success px-4 py-2">Donors Data</a>
        <a asp-controller="Contactus" asp-action="ContactsView" class="txt btn btn-success px-4 py-2">Contacts Data</a>
    </div>
    <br />
</section>
