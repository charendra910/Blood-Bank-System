@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<style>
    .container-fluid{
       
        text-align:center;
    }
    .s1{
        padding:100px 0 100px 0;
       
    }

    .sec-bg1 {
        background-color: #f9f9f9;
        margin-top: 40px;
        padding-bottom: 0;
        box-shadow: 3px 10px 10px rgba(0, 0, 0, 0.2); /* Shadow for lifted effect */
        position: relative;
        margin-left:80px;
        left:65px;
        z-index: 2;
        border-radius: 10px;
        width:538px;
        transition: transform 0.3s ease-in-out;
        /* Overlap by 30px */
    }
    .sec-bg1:hover{
            transform: scale(1.05); /* Zoom in on hover */
    }

    .sec-bg2 {

        margin-bottom: 50px;
        position: relative;
       
        border-radius:10px;
        box-shadow:15px 10px 10px rgba(0, 0, 0, 0.2); /* Shadow for lifted effect */
        z-index: 1; /* Behind .sec-bg1 */
        transition: transform 0.3s ease-in-out;
    }
    .sec-bg2:hover{
            transform: scale(1.05); /* Zoom in on hover */
    }
    .sec-intro{
        position:relative;
        left:40px;
        top:40px;
    }

    .span1{
        width: 72px;
        height: 2px;
        top:-5px;
        margin-top: 0px;
        position: relative;
        display: inline-block;
        width: 80px;
        height: 4px;
        background: red;
        vertical-align: baseline;
    }

    .s2 {
        background-image:url('https://www.lanermc.org/hubfs/organ%20donor.jpeg');
        
        background-size: cover;
        background-repeat: no-repeat;
        background-position: top center;
        background-attachment: inherit;
        width:100%;
        max-height:400px;

        overflow: hidden;
        padding-top: 60%; /* 16:9 Aspect Ratio */
        position: relative;
        
    } 

    .txt-bg{
        position:absolute;
        top:13%;
        left:50%;
        transform:translate(-50%, -50%);

    }
    /* .rw1,.rw2{
        background-color:antiquewhite;
        height:200px;
    } */
    .rw1{
        background-color:navajowhite;
        background-size:cover;
        background-repeat:no-repeat;
        position:relative;
       
    }
    .rw2{
        background-color:lightgreen;
        background-size: cover;
        background-repeat: no-repeat;
        position:relative;
    }

</style>

<div class="container-fluid p-0">
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/nv1.jpg" class="d-block w-100" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Efficient Blood Donation Management</h5>
                    <p>Streamline the process of registering donors and managing blood availability in real-time.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/nv2.jpg" class="d-block w-100" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Find Donors Instantly</h5>
                    <p>Search for donors by blood group and location, ensuring timely blood supply for those in need.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/photo3.jpg" class="d-block w-100" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Secure and Reliable System</h5>
                    <p>Ensure safe and secure record-keeping of blood donations with advanced data protection.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>



